# Configuración de entorno
ENVIRONMENT=develop

# URLs de la aplicación
NEXT_PUBLIC_API_BASE_URL=http://localhost:8081
NEXT_PUBLIC_APP_BASE_URL=http://localhost:3000
NEXT_PUBLIC_CLIENT_BASE_URL=http://localhost:3001

# Configuración de mapas (Mapbox)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# Configuración de autenticación (placeholders para desarrollo)
NEXT_PUBLIC_JWT_SECRET=urbantracker-frontend-development-secret-key-2024
NEXT_PUBLIC_JWT_EXPIRATION=86400

# Configuración de WebSocket/MQTT para cliente
NEXT_PUBLIC_MQTT_BROKER_HOST=localhost
NEXT_PUBLIC_MQTT_BROKER_PORT=1883
NEXT_PUBLIC_MQTT_BROKER_WEBSOCKET_PORT=9001
NEXT_PUBLIC_MQTT_TOPICS_TRACKING=urbantracker/tracking/#
NEXT_PUBLIC_MQTT_TOPICS_STATUS=urbantracker/status/#

# Configuración de email (placeholder para desarrollo)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@urbantracker.local

# Logging
LOG_LEVEL=INFO

# Node.js
NODE_ENV=development